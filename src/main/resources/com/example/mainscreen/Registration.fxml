<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.Pane?>
<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.mainscreen.RegistrationController">
   <children>
      <Pane layoutX="100.0">
         <VBox spacing="16" prefWidth="400.0" alignment="CENTER">
            <Label alignment="CENTER" prefHeight="88.0" prefWidth="211.0" text="Register" textAlignment="CENTER" underline="true">
               <font>
                  <Font size="30.0" />
               </font>
            </Label>
            <TextField fx:id="username" promptText="Username"/>
            <PasswordField fx:id="password" promptText="Password"/>
            <PasswordField fx:id="verifyPassword" promptText="Verify Password"/>
            <TextField fx:id="firstName" promptText="First Name"/>
            <TextField fx:id="lastName" promptText="Last Name"/>
            <TextField fx:id="email" promptText="Email Address"/>
            <TextField fx:id="address" promptText="Home Address"/>
            <Button onAction="#register" alignment="CENTER" mnemonicParsing="false" style="-fx-background-color: #00AD9E;" text="Create Account" textAlignment="CENTER" textFill="WHITE" />
            <Button fx:id="returnToLogin" onAction="#loadMainScreen" style="-fx-background-color: FFFFFF;" text="Return to login page" textAlignment="CENTER" textFill="#000000e8" underline="true" />
         </VBox>
      </Pane>
   </children>
</AnchorPane>