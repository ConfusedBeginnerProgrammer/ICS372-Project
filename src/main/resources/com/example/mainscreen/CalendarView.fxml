<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.mainscreen.CalendarViewController"
            prefHeight="400.0" prefWidth="600.0" alignment="CENTER">
    <Label text="Choose Appointment Date" style="-fx-font-size: 24px; -fx-padding: 16px" underline="true"/>
    <DatePicker fx:id="datePicker" style="-fx-padding: 16px"/>
    <ListView fx:id="timeListView" VBox.vgrow="ALWAYS">
    </ListView>
    <Button fx:id="confirmAppointment" onAction="#appointmentSuccess" text="Confirm Appointment" disable="true" style="-fx-font-size: 18px; -fx-background-color: #00AD9E; -fx-text-fill: #FFFFFF" />
</VBox>
